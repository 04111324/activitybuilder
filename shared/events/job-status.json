{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JobStatusUpdated",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "eventType": {
      "type": "string",
      "enum": ["JOB_STATUS_UPDATED"]
    },
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "jobId": {
      "type": "string"
    },
    "userId": {
      "type": "string"
    },
    "timestamp": {
      "type": "string"
    },
    "payload": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "status": {
          "type": "string",
          "enum": ["PENDING", "PROCESSING", "COMPLETED", "FAILED"]
        },
        "errorMessage": {
          "type": "string"
        },
        "attempt": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of times this job has been attempted"
        }
      },
      "required": ["status", "attempt"]
    }
  },

  "required": [
    "eventType",
    "version",
    "jobId",
    "userId",
    "timestamp",
    "payload"
  ]
}
