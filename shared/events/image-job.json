{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ImageJobRequested",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "eventType": {
      "type": "string",
      "enum": ["IMAGE_JOB_REQUESTED"]
    },
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "jobId": {
      "type": "string"
    },
    "userId": {
      "type": "string"
    },
    "timestamp": {
      "type": "string"
    },
    "payload": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "prompt": {
          "type": "string",
          "minLength": 1
        },
        "style": {
          "type": "string",
          "description": "Visual style (e.g. cartoon, watercolor, realistic)"
        },
        "size": {
          "type": "string",
          "enum": ["256x256", "512x512", "1024x1024"]
        },
        "seedImageUrl": {
          "type": "string",
          "format": "uri",
          "description": "Optional image-to-image input"
        }
      },
      "required": ["prompt", "size"]
    }
  },

  "required": [
    "eventType",
    "version",
    "jobId",
    "userId",
    "timestamp",
    "payload"
  ]
}
