{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TextJobRequested",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "eventType": {
      "type": "string",
      "enum": ["TEXT_JOB_REQUESTED"]
    },
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "jobId": {
      "type": "string"
    },
    "userId": {
      "type": "string"
    },
    "timestamp": {
      "type": "string"
    },
    "payload": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "prompt": {
          "type": "string",
          "minLength": 1
        },
        "options": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "ageRange": {
              "type": "string",
              "pattern": "^\\d+-\\d+$"
            },
            "difficulty": {
              "type": "string",
              "enum": ["easy", "medium", "hard"]
            },
            "language": {
              "type": "string",
              "minLength": 2,
              "maxLength": 5
            }
          }
        }
      },
      "required": ["prompt"]
    }
  },
  "required": [
    "eventType",
    "version",
    "jobId",
    "userId",
    "timestamp",
    "payload"
  ]
}
